<style>

    .product-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .product-price {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>
<div class="mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.FirstName</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4"> @Model.LastName</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.NationalCode</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.PhoneNumber</p>
            </div>
            <a class="btn btn-outline-info" asp-action="Index" asp-controller="Seller">
                <p>بازگشت به لیست فروشندگان</p>
            </a>

            <a asp-action="Delete" asp-controller="Seller" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                <i class="bi bi-delete"></i>
                <p>حذف</p>
            </a>

            <a asp-action="Edit" asp-controller="Seller" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                <i class="bi bi-delete"></i>
                <p>ادیت</p>
            </a>
        </div>
    </div>
</div>