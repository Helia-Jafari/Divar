@{
}

    <style>

        .product-image {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .product-price {
            font-size: 1.5rem;
            font-weight: bold;
        }
    </style>
    <div class="mt-5">
        <div class="row">
            <!-- Product Image -->
            @*<div class="col-md-6">
                <img src="https://via.placeholder.com/500x500" alt="Product Image" class="product-image">
        </div>*@
            <!-- Product Details -->
            <div class="col-md-12">
            <h1 class="mb-3">@Model.Title</h1>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.Description</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4"> @Model.BasePrice تومان</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.Brand</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.Color</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.FunctionKilometers</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.ChassisAndBodyCondition</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.EngineCondition</p>
            </div>
            @if (Model.FrontChassisCondition != null)
            {
                <div class="d-flex">
                    <p class="fw-bold fs-4"></p>
                    <p class="fs-4">@Model.ThirdPartyInsuranceTerm</p>
                </div>
            }
            @if (Model.FrontChassisCondition != null)
            {
                <div class="d-flex">
                    <p class="fw-bold fs-4"></p>
                    <p class="fs-4">@Model.Gearbox</p>
                </div>
            }
            @if (Model.FrontChassisCondition != null)
            {
                <div class="d-flex">
                    <p class="fw-bold fs-4"></p>
                    <p class="fs-4">@Model.FrontChassisCondition</p>
                </div>
            }
            @if (Model.RearChassisCondition != null)
            {
                <div class="d-flex">
                    <p class="fw-bold fs-4"></p>
                    <p class="fs-4">@Model.RearChassisCondition</p>
                </div>
            }
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.UpdateDate</p>
            </div>
            <div class="d-flex">
                <p class="fw-bold fs-4"></p>
                <p class="fs-4">@Model.City</p>
            </div>



            @*public bool DoYouWantToReplace { get; set; }
            public bool IsTheChatActivated { get; set; }
            public bool IsThePhoneCallActive { get; set; }
            public virtual Category? Category { get; set; }*@

            <a class="btn btn-outline-info" asp-action="Index" asp-controller="Home">
                <p>بازگشت به لیست محصولات</p>
            </a>

            <a asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                <i class="bi bi-delete"></i>
                <p>حذف</p>
            </a>

            <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-outline-warning" asp-route-id="@Model.Id">
                <i class="bi bi-delete"></i>
                <p>ادیت</p>
            </a>
            </div>
        </div>
    </div>